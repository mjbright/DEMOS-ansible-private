# Static inventory file example
# This file defines the hosts and groups that Ansible will manage

[webservers]
web1 ansible_host=192.168.1.10
web2 ansible_host=192.168.1.11

[databases]
db1 ansible_host=192.168.1.20
db2 ansible_host=192.168.1.21

[loadbalancers]
lb1 ansible_host=192.168.1.30

# Group of groups
[production:children]
webservers
databases
loadbalancers

# Variables for all hosts
[all:vars]
ansible_user=ansible
ansible_python_interpreter=/usr/bin/python3

# Variables for webservers group
[webservers:vars]
http_port=80
max_clients=200

# Variables for databases group
[databases:vars]
db_port=5432
